<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="IconStyle">
        <item name="tint">?attr/colorAccent</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
        <item name="android:layout_width">@dimen/icon_layout_height</item>
        <item name="android:layout_height">@dimen/icon_layout_height</item>
        <item name="android:layout_gravity">end|center_vertical</item>
    </style>

    <style name="BackButton" parent ="IconStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/main_padding</item>
    </style>

    <style name="MainMenuButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:elevation">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">17dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorAccent</item>
    </style>

</resources>
