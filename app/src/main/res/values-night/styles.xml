<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"><!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_background</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/cardview_light_background</item>
    </style>

        <style name="MessageTextStyle">
            <item name="android:textColor">@color/white</item>
            <item name="android:textSize">26sp</item>
            <item name="android:fontFamily">@font/ys_display_regular</item>
            <item name="iconTint">@color/white</item>
        </style>
        <style name="IconStyle">
            <item name="tint">@color/white</item>
        </style>

        <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
            <item name="tint">@color/white</item>
            <item name="android:elevation">10dp</item>
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:paddingLeft">24dp</item>
            <item name="android:paddingRight">24dp</item>
            <item name="android:paddingTop">16dp</item>
            <item name="android:paddingBottom">16dp</item>
            <item name="android:gravity">center</item>
            <item name="android:backgroundTint">?attr/colorOnPrimary</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:textSize">20sp</item>
            <item name="android:textAllCaps">false</item>
            <item name="iconGravity">textStart</item>
            <item name="iconPadding">8dp</item>
            <item name="cornerRadius">8dp</item>
            <item name="iconTint">@color/white</item>
            <item name="android:fontFamily">@font/ys_display_regular</item>
            <item name="android:textFontWeight">700</item>
        </style>
    </resources>
