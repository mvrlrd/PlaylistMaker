<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical"
    android:paddingStart="17dp"
    android:paddingEnd="15dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:text="@string/search_button"
        android:textColor="@color/text_color"
        android:textSize="@dimen/medium_text_size"
        app:cornerRadius="@dimen/corner_radius"
        app:icon="@drawable/ic_search_icon"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_to_text_distance"
        app:iconTint="@color/text_color" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mediateka_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:text="@string/mediateka_button"
        android:textColor="@color/text_color"
        android:textSize="@dimen/medium_text_size"
        app:cornerRadius="@dimen/corner_radius"
        app:icon="@drawable/ic_mediateca_icon"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_to_text_distance"
        app:iconTint="@color/text_color" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/settings_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:text="@string/search_button"
        android:textColor="@color/text_color"
        android:textSize="@dimen/medium_text_size"
        app:cornerRadius="@dimen/corner_radius"
        app:icon="@drawable/ic_settings_icon"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_to_text_distance"
        app:iconTint="@color/text_color" />

</LinearLayout>


