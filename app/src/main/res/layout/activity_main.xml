<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_background"
    android:orientation="vertical"
    android:paddingEnd="15dp"
    android:paddingStart="17dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/search_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/search_button"
            android:textSize="@dimen/text_size"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:textColor="@color/text_color"
            app:icon="@drawable/ic_search_icon"
            app:iconTint="@color/text_color"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/icon_to_text_distance"
            app:cornerRadius="@dimen/corner_radius"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/mediateka_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/mediateka_button"
            android:textSize="@dimen/text_size"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:textColor="@color/text_color"
            app:icon="@drawable/ic_mediateca_icon"
            app:iconTint="@color/text_color"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/icon_to_text_distance"
            app:cornerRadius="@dimen/corner_radius"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/settings_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/search_button"
            android:textSize="@dimen/text_size"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:textColor="@color/text_color"
            app:icon="@drawable/ic_settings_icon"
            app:iconTint="@color/text_color"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/icon_to_text_distance"
            app:cornerRadius="@dimen/corner_radius"/>



</LinearLayout>


